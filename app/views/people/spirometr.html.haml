.page-header.text-center
  %h1= "Спирометр"
= simple_form_for '', method: :get, html: { class: 'col-md-6 col-md-offset-3 text-center', role: 'form1' } do |f|
  .well
    .row
      .col-md-12
        .form-group
          = f.input :pos_exhalation, label: "ПОС", placeholder: "Формат:  99.99", value: params[:pos_exhalation]
    .row
      .col-md-12
        .form-group
          = f.input :ofv1, label: "ОФВ1", placeholder: "Формат:  99.99", value: params[:ofv1]
    .row
      .col-md-12
        .form-group
          = f.input :fgel, label: "ФЖЕЛ", placeholder: "Формат:  99.99", value: params[:fgel]
    .row
      .col-md-12
        .form-group
          = f.input :complect_id, label: "Прибор", value: params[:complect_id]
  .inline
    = submit_tag 'Отправить данные', class: 'btn btn-primary'
    = link_to 'Назад',  people_path, class: 'btn btn-default'
